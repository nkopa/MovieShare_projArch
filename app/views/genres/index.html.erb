<% provide(:title, "Kategorie") %>
<h1>Kategorie</h1>

<% if logged_in? %>
  <p class="navbar-text navbar-right">
    <%= link_to 'Nowa Kategoria', new_genre_path %>
  </p>
<% end %>
<br/>
<%= will_paginate @collection, renderer: BootstrapPagination::Rails %>


<table class="table">
  <thead>
    <tr>
      <th>Nazwa</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <% if logged_in? %>
          <td><%= link_to 'Edytuj', edit_genre_path(genre) %></td>
          <td><%= link_to 'Usuń', genre, method: :delete, data: { confirm: 'Jesteś pewny?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= will_paginate @collection, renderer: BootstrapPagination::Rails %>

